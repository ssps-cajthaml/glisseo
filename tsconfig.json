{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./compile",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "strict": true,
    "types": ["node"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "config",
    "log",
    "dist",
    "build"
  ]
}